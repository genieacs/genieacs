{
  "compilerOptions": {
    "lib": [
      "esnext", "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": true,
    "allowJs": true,
    "sourceMap": true
  },
  "include": [
      "./bin/.*.ts",
      "./lib/**/*",
      "./ui/**/*",
      "./test/**/*",
      "./build/**/*",
      "./tools/.*.ts"
  ]
}
